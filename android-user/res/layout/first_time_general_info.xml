<?xml version="1.0" encoding="utf-8"?>
<GridLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_gravity="center"
    android:padding="20dp"
    android:columnCount="3"
    android:rowCount="7">
    
    <FrameLayout
        android:layout_width="wrap_content"
	    android:layout_height="wrap_content"
	    android:layout_column="0"
	    android:layout_gravity="fill_vertical"
	    android:layout_marginRight="20dp"
	    android:layout_row="0"
	    android:layout_rowSpan="2"
	    >

		<ImageView
		    android:id="@+id/avatar_image"
		    android:layout_width="wrap_content"
		    android:layout_height="wrap_content"
		    android:contentDescription="@string/image_content_description"
		    android:gravity="center"
		    android:src="@drawable/ic_contact1" />

    </FrameLayout>
    
	<LinearLayout
	    android:layout_width="wrap_content"
	    android:layout_height="wrap_content"
	    android:layout_column="1"
	    android:layout_columnSpan="2"
	    android:layout_gravity="fill_horizontal"
	    android:layout_row="0"
	    android:orientation="vertical" >

	    <TextView 
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:text="@string/nickname_label"
	        android:textAllCaps="true"
	        />

	    <EditText
	        android:id="@+id/nickname_edittext"
	        android:layout_width="match_parent"
	        android:layout_height="wrap_content"
	        android:inputType="textPersonName"
	        />

	    <!--
	    <TextView 
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:text="@string/password_label"
	        android:textAllCaps="true"
	        />

	    <EditText
	        android:id="@+id/password_edittext"
	        android:layout_width="match_parent"
	        android:layout_height="wrap_content"
	        android:inputType="textPassword" />
	        -->

	</LinearLayout>

	<View
	    android:layout_row="1"
	    android:layout_column="0"
	    android:layout_columnSpan="3"
	    android:layout_width="match_parent"
	    android:layout_height="4dp"
	    android:background="@drawable/divider"
	    android:layout_marginTop="20dp"
	    android:layout_marginBottom="10dp"
	    />
	
	<TextView
	    android:layout_width="wrap_content"
	    android:layout_height="wrap_content"
	    android:layout_column="0"
	    android:layout_columnSpan="3"
	    android:layout_row="2"
	    android:layout_gravity="fill_horizontal"
	    android:layout_marginBottom="10dp"
	    android:text="@string/your_food_restrictions"
	    android:textAlignment="center"
	    android:gravity="center"
	    android:textAllCaps="true"
	    android:textSize="14sp" />
	
	<GridLayout
	    android:id="@+id/restrictions"
	    android:layout_row="3"
	    android:layout_rowSpan="3"
	    android:layout_column="0"
	    android:layout_columnSpan="3"
	    android:layout_width="wrap_content"
		android:layout_height="wrap_content"
	    android:rowCount="3"
	    android:columnCount="3"
	    android:layout_gravity="center"
	    >
	    <LinearLayout
	        android:id="@+id/restriction1"
	        android:layout_row="0"
	        android:layout_column="0"
	        android:layout_width="188px"
	        android:layout_height="195px"
	        android:orientation="vertical">
	        <View
		        android:tag="@+id/restriction1"
	            android:layout_width="188px"
	            android:layout_height="195px"
	            android:background="@drawable/gluten_bg"
	            android:contentDescription="@string/image_content_description"
	            />
	    </LinearLayout>
	        
	    <LinearLayout
	        android:id="@+id/restriction2"
	        android:layout_row="0"
	        android:layout_column="1"
	        android:layout_width="188px"
	        android:layout_height="195px"
	        android:orientation="vertical">
	        <View
		        android:tag="@+id/restriction2"
	            android:layout_width="188px"
	            android:layout_height="195px"
	            android:background="@drawable/milk_bg"
	            android:contentDescription="@string/image_content_description"
	            />
	    </LinearLayout>
	    
	    <LinearLayout
	        android:id="@+id/restriction3"
	        android:layout_row="0"
	        android:layout_column="2"
	        android:layout_width="188px"
	        android:layout_height="195px"
	        android:orientation="vertical">
	        <View
		        android:tag="@+id/restriction3"
	            android:layout_width="188px"
	            android:layout_height="195px"
	            android:background="@drawable/colour_bg"
	            android:contentDescription="@string/image_content_description"
	            />
	    </LinearLayout>
	    
	    <LinearLayout
	        android:id="@+id/restriction4"
	        android:layout_row="1"
	        android:layout_column="0"
	        android:layout_width="188px"
	        android:layout_height="195px"
	        android:orientation="vertical">
	        <View
		        android:tag="@+id/restriction4"
	            android:layout_width="188px"
	            android:layout_height="195px"
	            android:background="@drawable/halal_bg"
	            android:contentDescription="@string/image_content_description"
	            />
	    </LinearLayout>
	    
	    <LinearLayout
	        android:id="@+id/restriction5"
	        android:layout_row="1"
	        android:layout_column="1"
	        android:layout_width="188px"
	        android:layout_height="195px"
	        android:orientation="vertical">
	        <View
		        android:tag="@+id/restriction5"
	            android:layout_width="188px"
	            android:layout_height="195px"
	            android:background="@drawable/sugar_free_bg"
	            android:contentDescription="@string/image_content_description"
	            />
	    </LinearLayout>
	    
	    <LinearLayout
	        android:id="@+id/restriction6"
	        android:layout_row="1"
	        android:layout_column="2"
	        android:layout_width="188px"
	        android:layout_height="195px"
	        android:orientation="vertical">
	        <View
		        android:tag="@+id/restriction6"
	            android:layout_width="188px"
	            android:layout_height="195px"
	            android:background="@drawable/vegetarian_bg"
	            android:contentDescription="@string/image_content_description"
	            />
	    </LinearLayout>
	    
	    <LinearLayout
	        android:id="@+id/restriction7"
	        android:layout_row="2"
	        android:layout_column="0"
	        android:layout_width="188px"
	        android:layout_height="195px"
	        android:orientation="vertical">
	        <View
		        android:tag="@+id/restriction7"
	            android:layout_width="188px"
	            android:layout_height="195px"
	            android:background="@drawable/bio_bg"
	            android:contentDescription="@string/image_content_description"
	            />
	    </LinearLayout>
	    
	    <LinearLayout
	        android:id="@+id/restriction8"
	        android:layout_row="2"
	        android:layout_column="1"
	        android:layout_width="188px"
	        android:layout_height="195px"
	        android:orientation="vertical">
	        <View
		        android:tag="@+id/restriction8"
	            android:layout_width="188px"
	            android:layout_height="195px"
	            android:background="@drawable/pregnancy_bg"
	            android:contentDescription="@string/image_content_description"
	            />
	    </LinearLayout>
	    
	    <LinearLayout
	        android:id="@+id/restriction9"
	        android:layout_row="2"
	        android:layout_column="2"
	        android:layout_width="188px"
	        android:layout_height="195px"
	        android:orientation="vertical">
	        <View
		        android:tag="@+id/restriction9"
	            android:layout_width="188px"
	            android:layout_height="195px"
	            android:background="@drawable/see_more"
	            android:contentDescription="@string/image_content_description"
	            />
	    </LinearLayout>
	</GridLayout>
	
	<ImageView
	    android:id="@+id/create_button"
	    android:layout_row="6"
	    android:layout_column="0"
	    android:layout_columnSpan="3"
	    android:layout_gravity="fill_horizontal"
	    android:layout_width="600px"
	    android:layout_height="wrap_content"
	    android:gravity="center"
	    android:src="@drawable/create_bg"
	    />
</GridLayout>