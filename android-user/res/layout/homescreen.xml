<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_margin="20dp"
    android:orientation="vertical"
    >
    <GridLayout
	    android:layout_width="match_parent"
    	android:layout_height="wrap_content"
    	android:columnCount="4"
    	android:rowCount="2">
    
    	<FrameLayout
        	android:layout_width="wrap_content"
	    	android:layout_height="wrap_content"
	    	android:layout_column="0"
	    	android:layout_gravity="fill_vertical"
	    	android:layout_marginRight="20dp"
	    	android:layout_row="0"
	    	android:layout_rowSpan="2"
	    	>
			<ImageView
			    android:id="@+id/avatar_image"
			    android:layout_width="wrap_content"
			    android:layout_height="wrap_content"
			    android:contentDescription="@string/image_content_description"
			    android:gravity="center"
			    android:src="@drawable/ic_contact1"
			    />
	    </FrameLayout>
    
	    <TextView
	        android:id="@+id/nickname_textview"
	        android:layout_row="0"
	        android:layout_column="1"
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:textAllCaps="true"
	        android:layout_marginBottom="20dp"
	        android:layout_marginLeft="10dp"
	        />
	    
	    <LinearLayout
	        android:layout_row="1"
	        android:layout_column="1"
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        >
			<View
		        android:id="@+id/restriction1"
	            android:layout_width="156px"
	            android:layout_height="158px"
	            android:background="@drawable/gluten_bg"
	            android:contentDescription="@string/image_content_description"
	            />
		</LinearLayout>
	    <LinearLayout
	        android:layout_row="1"
	        android:layout_column="2"
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        >
	    	<View
		        android:id="@+id/restriction2"
	            android:layout_width="156px"
	            android:layout_height="158px"
	            android:background="@drawable/vegetarian_bg"
	            android:contentDescription="@string/image_content_description"
	            />
	    </LinearLayout>
	    <LinearLayout
	        android:layout_row="1"
	        android:layout_column="3"
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        >
	    	<View
		        android:id="@+id/restriction3"
	            android:layout_width="156px"
	            android:layout_height="158px"
	            android:contentDescription="@string/image_content_description"
	            />
		</LinearLayout>
	</GridLayout>
	
    <View
	    android:layout_width="match_parent"
	    android:layout_height="4dp"
	    android:background="@drawable/divider"
	    android:layout_marginTop="10dp"
	    android:layout_marginBottom="10dp"
	    />
    
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        >
    	<View
        	android:id="@+id/map"
        	android:layout_width="match_parent"
        	android:layout_height="wrap_content"
	    	android:background="@drawable/map_unselected"
        	/>
    	<ImageView
    	    android:id="@+id/restaurant_selection"
    	    android:layout_alignParentTop="true"
    	    android:layout_marginTop="9dp"
    	    android:layout_width="wrap_content"
    	    android:layout_height="wrap_content"
    	    android:src="@drawable/restaurant_label"
    	    android:visibility="gone"
    	    />
    </RelativeLayout>
</LinearLayout>
